{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "commonjs",
      "moduleResolution": "node",
  
      /* Paths */
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./src",
  
      /* Strict Type Checking */
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Module Resolution */
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
  
      /* Source Maps */
      "sourceMap": true,
  
      /* Build */
      "removeComments": true,
      "noImplicitAny": true,
  
      /* Node Compatibility */
      "types": ["node"],
  
      /* Performance */
      "incremental": true
    },
  
    "include": ["src/**/*"],
  
    "exclude": [
      "node_modules",
      "dist"
    ]
  }